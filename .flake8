[flake8]
max-line-length = 120
extend-ignore = E203, W503, E501
exclude = 
    .git,
    __pycache__,
    .venv,
    venv,
    */alembic/versions/*,
    */tests/*,
    build,
    dist
per-file-ignores =
    __init__.py:F401
    */api/*.py:F401
    */messaging/rabbitmq_client.py:F401
    */core/dependencies.py:F401
    */services/*.py:F401
    */dao/*.py:F401
    */models/*.py:F401
    */events/handlers/*.py:F401
statistics = True
count = True
